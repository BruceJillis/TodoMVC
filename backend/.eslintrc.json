{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "chai-friendly"
  ],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "curly": "error",
    "no-console": "off",
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "no-var": 2,
    "quote-props": 2
  }
}
